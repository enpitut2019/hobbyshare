<header class="bg-info py-5 mb-5">
  <div class="container h-100">
    <div class="h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-5 text-white mt-1 mb-1">趣味の共有結果</h1>
      </div>
    </div>
  </div>
</header>

<div class="container main">
  <h2><strong><%= @target_name %></strong>さんと一致した趣味</h2>

  <% @match_hobbies.each do |hobby| %>
    <%= hobby.hobby_name %><br>
  <% end %>
  <br>
  <% if @target_intro %>
  <h3><strong><%= @target_name %></strong>さんの情報</h3>
  <div class="card border-success bg-light mb-3" style="max-width: 30rem; min-width: 12rem;">
    <div class="card-body"><%= simple_format(html_escape(@target_intro)) %><ul style="list-style: none; padding-left: 0;">
    </ul></div>
  </div>
  <% end %>

  <hr>
  <input type="button" class="btn btn-link" value="趣味の共有結果へ戻る" onclick="location.href='/user/show/<%=@user_token%>'">
  <input type="button" class="btn btn-link" value="メンバー一覧へ戻る" onclick="location.href='/group/list/<%=@group_token%>'">
  <input type="button" class="btn btn-link" value="マイページへ戻る" onclick="location.href='/user/mypage/<%=@user_token%>'">
</div>
