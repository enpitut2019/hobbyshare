<header class="bg-primary py-5 mb-5">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-4 text-white mt-5 mb-2">ログインページ</h1>
        <p class="lead mb-5 text-white-50">ユーザー名とパスワードを入力してください。</p>
      </div>
    </div>
  </div>
</header>

<%= form_tag("/account/login_process") do %>
  <p><strong>ユーザー名</strong>
  <input name="name" value="<%=@account_name%>" required>
  </p>

  </p>
  <p><strong>パスワード</strong>
  <input type="password" name="password" required>
  </p>

  <input type="submit" value="ログイン">
  <button type="button" onclick="clearFormAll();">リセット</button>
<% end %>
