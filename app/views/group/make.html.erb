<header class="bg-info py-5 mb-5">
  <div class="container h-100">
    <div class="h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-5 text-white mt-1 mb-1">新規グループ作成</h1>
        <p class="lead mb-5 text-white-50">趣味を共有するグループを作成</p>
      </div>
    </div>
  </div>
</header>

<div class="container main">
<%= form_tag("/group/new") do %>
  <p><strong>グループ名</strong>
  <input name="group_name" value="<%= @group_name %>" class="form-control" required>
  </p>
  <input type="submit" value="グループを作成" class="btn btn-primary btn-bg">
<% end %>

<% if @login_group_names %>
  <hr>
  <p>以下のグループにログインしています</p>
  <table class="table">
    <% @login_group_names.each do |g| %>
    <tr>
      <td>
        <a href="/group/list/<%=Group.find_by(group_name: g).token%>"><%= g %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>

<hr>
<input type="button" class="btn btn-link" value="トップページへ戻る" onclick="location.href='/'">
</div>
