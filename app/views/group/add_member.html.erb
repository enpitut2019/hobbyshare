<header class="bg-info py-5 mb-5">
  <div class="container h-100">
    <div class="h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-5 text-white mt-1 mb-1">メンバーの追加</h1>
      </div>
    </div>
  </div>
</header>

<div class="container main">
<p><strong>名前を入力</strong></p>
<%= form_tag("/user/new_member") do %>
  <input type="hidden" name="group_token" value="<%= @group_token %>">
  <input  name="user_name" class="form-control" required>
  <input type="submit" value="グループに参加！" class="btn btn-primary btn-bg">
<% end %>
</div>
